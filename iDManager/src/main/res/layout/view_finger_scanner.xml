<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="@dimen/font_eighteen"
        android:text="@string/please_validate_finger_scanner"/>

    <TextView
        android:id="@+id/tv_loginByGesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="@id/tv_prompt"
        app:layout_constraintBottom_toBottomOf="@id/tv_prompt"
        android:layout_margin="10dp"
        android:padding="6dp"
        android:background="@android:drawable/list_selector_background"
        android:textSize="@dimen/font_sixteen"
        android:text="@string/use_gesture_login"/>

</androidx.constraintlayout.widget.ConstraintLayout>
